<div class="box box-info">
	<div class="box-header with-border">
		<h3 class="box-title">Causas</h3>
	</div>
	<!-- /.box-header -->
	<div class="box-body">
		<div class="table-responsive">
			<%= form_tag(cases_path, method: :get) do %>
				<%= text_field_tag :term, params[:term] %>
				<%= submit_tag 'Buscar', name: nil %>
			<% end %>
			<table id="casesresume" class="table table-striped table-bordered" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th>Numero Ingreso</th>
						<th>Fecha Ingreso</th>
						<th>Ubicacion</th>
						<th>Fecha Ubicacion</th>
						<th>Corte</th>
						<th>Caratulado</th>
					</tr>
				</thead>
				<tbody>
					<% @cases.each do |obj| %>
						<tr>
							<td><a href="http://corte.poderjudicial.cl<%=obj.public_detail_url%>" target="_blank"><%=obj.entry_number%></a></td>
							<td><%=obj.entry_date%></td>
							<td><%=obj.location%></td>
							<td><%=obj.location_date%></td>
							<td><%=obj.court%></td>
							<td><%=obj.caption%></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= will_paginate @cases %>
		</div>
	</div>
</div>
<script type="text/javascript">
	$(document).ready(function() {
		$('#casesresume').DataTable();
	} );
</script>